<%= render 'error' %>
<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
<div class="title">
	<label for="book_title">Title</label>
	<%= f.text_field :title %>
</div>
<div class="body">
	<label for="book_body">Opinion</label>
	<%= f.text_area :body %>
</div>
<div class="submit">
	<%= f.submit 'Update Book' %>
</div>
<% end %>
<%= link_to "Show", book_path(@book.id) %>
<%= link_to "Back", books_path %>