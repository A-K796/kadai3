<body>
<div class="container">
<div class="row">
<div class="col-xs-3">
	<%= render 'books/error' %>
	<h2>User info</h2>
	<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'lpeg', fallback: 'user.jpg' %>
	<table class="table">
		<tbody>
			<tr>
				<th>name</th>
				<th><%= user.name %></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= user.introduction %></th>
			</tr>
		</tbody>
	</table>
	    <% if @user == current_user %>
		<%= link_to edit_user_path(user) do %>
		<div class="col-xs-12 btn btn-default">
			<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
		</div>
		<% end %>
		<% end %>
	<h2>New book</h2>
    <%= form_for(book) do |f| %>
    <div class="field row">
	    <label for="book_title">Title</label>
	    <div class="col-xs-12 book_title"><%= f.text_field :title %></div>
    </div>

    <div class="field row">
	    <label for="book_body">Opinion</label>
	    <div class="col-xs-12 book_body"><%= f.text_area :body %></div>
    </div>

    <div class="submit">
	    <%= f.submit 'Create Book' %>
    </div>

   <% end %>
</div>
</div>
</div>
</body>