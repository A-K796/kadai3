<div class="col-xs-9">
	<% if @user.errors.any? %>
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
    <ul>
	    <% @user.errors.full_messages.each do |message| %>
	    <li><%= message %></li>
	    <% end %>
    </ul>
    <% end %>
	<h2>User info</h2>
	<%= form_for(@user) do |f| %>
	<div class="field">
		<label>Name</label>
		<%= f.text_field :name %>
	</div>

	<div class="field">
		<label>Image</label>
		<%= f.attachment_field :profile_image %>
	</div>

	<div class="field">
		<label>Introduction</label>
		<%= f.text_field :introduction %>
	</div>

	<div class="actions">
		<%= f.submit 'Update User' %>
	</div>
	<% end %>
</div>
